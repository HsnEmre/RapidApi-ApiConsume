@model List<ResultroomDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";

    int count = 0;
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Oda Numarası</th>
        <th>Başlık</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>
    @foreach (var i in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@i.RoomNumber</td>
            <td>@i.Title</td>
            <td><a href="/AdminRoom/DeleteRoom/@i.RoomID" class="btn mb-1 btn-rounded btn-danger">Sil</a></td>
            <td><a href="/AdminRoom/UpdateRoom/@i.RoomID" class="btn mb-1 btn-rounded btn-success">Güncelle</a></td>
            @* <td><a href="AdminRoom" class="btn mb-1 btn-rounded btn-warning">Detaylar</a></td> *@
        </tr>
    }
</table>

<a href="/AdminRoom/AddRoom/" class="btn mb-1 btn-rounded btn-info">Yeni Oda Girişi</a>
