@model List<ResultServiceDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}


<table class="table table-bordered">

    <tr>
        <th>#</th>
        <th>Hizmet Başlığı</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>
    @foreach (var i in Model)
    {
        <tr>
            <th>@i.ServiceID</th>
            <td>@i.Title</td>
            <td><a href="/Service/DeleteService/@i.ServiceID/" class="btn mb-1 btn-rounded btn-outline-danger">SİL</a></td>
            <td><a href="/Service/UpdateService/@i.ServiceID/" class="btn mb-1 btn-rounded btn-outline-success">Güncelle</a></td>
            

        </tr>
    }
</table>
<a href="/Service/AddService/" class="btn mb-1 btn-rounded btn-outline-info">Yeni Hizmet Girişi</a>