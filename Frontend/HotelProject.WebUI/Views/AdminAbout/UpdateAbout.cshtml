@model UpdateAboutDto
@{
    ViewData["Title"] = "UpdateStaff";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
    <div class="form-group">
        <h1>Güncelleme Sayfası</h1>
    </div>

    <div class="form-group">
        <input type="hidden" asp-for="AboutID" />
    </div>

    <div class="form-group">
        <span class="label label-warning">Hakkımızda Başlık 1</span>
        <input type="text" asp-for="Title1" class="form-control" />
    </div>

    <br />
    <br />
    <div class=" form-group">
        <span class="label label-warning">Hakkımızda Başlık 2</span>
        <input type="text" asp-for="Title2" class="form-control" />
    </div>

    <br />
    <br />
    <div class="form-group">
        <span class="label label-warning">İçerik</span>
        <input type="text" asp-for="Content" class="form-control" />
    </div>

    <br />
    <br />
    <div class="form-group">
        <span class="label label-warning">Çalışan Sayısı</span>
        <input type="text" asp-for="StaffCount" class="form-control" />
    </div>

    <br />
    <br />
    <div class="form-group">
        <span class="label label-warning">Oda Sayısı</span>
        <input type="text" asp-for="RoomCount" class="form-control" />
    </div>

    <br />
    <div class="form-group">
        <span class="label label-warning">Müşteri sayısı</span>
        <input type="text" asp-for="CustomerCount" class="form-control" />
    </div>

    <br />

    <button class="btn mb-1 btn-rounded btn-success">Personel Güncelle</button>
</form>