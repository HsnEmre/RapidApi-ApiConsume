@model CreateGuestDto
@{
    ViewData["Title"] = "AddStaff";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
    <div class="form-group">
        <span class="label label-warning"> Misafir Adı:</span>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <br />
    <br />
    <div class=" form-group">
        <span class="label label-warning">Misafir Soyadı:</span>
        <input type="text" asp-for="Surname" class="form-control" />
        <span asp-validation-for="Surname" class="text-danger"></span>
    </div>
    <div class=" form-group">
        <span class="label label-warning">Misafir Şehir:</span>
        <input type="text" asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>       
    <br />    
    <br />
    <button class="btn mb-1 btn-rounded btn-info">Misafir Ekle</button>
</form>