@model List<ResultGuestDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";

    int count = 0;
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Müşteri Adı</th>
        <th>Müşteri Soyad</th>
        <th>Şehir</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>
    @foreach (var i in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@i.Name</td>
            <td>@i.Surname</td>
            <td>@i.City</td>
            <td><a href="/AdminRoom/DeleteGuest/@i.GuestID" class="btn mb-1 btn-rounded btn-danger">Sil</a></td>
            <td><a href="/AdminRoom/UpdateGuest/@i.GuestID" class="btn mb-1 btn-rounded btn-success">Güncelle</a></td>
            @* <td><a href="AdminRoom" class="btn mb-1 btn-rounded btn-warning">Detaylar</a></td> *@
        </tr>
    }
</table>

<a href="/AdminRoom/AddGuest/" class="btn mb-1 btn-rounded btn-info">Yeni müşteri Girişi</a>
