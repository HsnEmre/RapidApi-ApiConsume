@model CreateRoomDto
@{
    ViewData["Title"] = "AddStaff";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
    <div class="form-group">
        <span class="label label-warning"> Oda Numarası:</span>
        <input type="text" asp-for="RoomNumber" class="form-control" />
    </div>

    <br />
    <br />
    <div class=" form-group">
        <span class="label label-warning">Başlık:</span>
        <input type="text" asp-for="Title" class="form-control" />
    </div>

    <br />
    <br />
    <div class="form-group">
        <span class="label label-warning">Fiyat:</span>
        <input type="text" asp-for="price" class="form-control" />
    </div>

    <br />
    <br />
    <div class="form-group">
        <span class="label label-warning">Yatak Sayısı:</span>
        <input type="text" asp-for="BedCount" class="form-control" />
    </div>

    <br />
    <br />
    <div class="form-group">
        <span class="label label-warning">Banyo Sayısı:</span>
        <input type="text" asp-for="BathCount" class="form-control" />
    </div>
    <div class="form-group">
        <span class="label label-warning">Görsel:</span>
        <input type="text" asp-for="RoomCoverImage" class="form-control" />
    </div>

    <br />
    <div class="form-group">
        <span class="label label-warning">Açıklama:</span>
        <input type="text" asp-for="Description" class="form-control" />
    </div>

    <br />

    <button class="btn mb-1 btn-rounded btn-info">Oda Ekle</button>
</form>